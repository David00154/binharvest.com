---
import HomeHero from "../components/Hero/HomeHero";
import Layout from "../layouts/Layout.astro";
import ctaImg from "../assets/images/cta-2-shape-1.png";
import ctaImg2 from "../assets/images/cta-2-1-bg.png";
import benefitBg1 from "../assets/images/benefit-bg-1-1.jpg";
import benefitImg from "../assets/images/benefit-1-1.png";
---

<Layout title="Binharvest">
	<!-- <HomeHero /> -->
	<section>
		<div class="max-w-[1200px] flex mx-auto relative benefit-mega-section">
			<!--  -->
			<div class="sm:w-[50%] make-column">
				<div class="benefit-left-wrap" style={`--bg-img:url('${benefitBg1}'); background-color: transparent; background-image: none;`}>
					<!-- 1 -->
					<div class="benefit-section-left-1" style={`--bg-img: url('${benefitBg1}')`}></div>
					<!-- 2 -->
					<div class="benefit-section-left-2"></div>
					<!-- 3 -->
					<div class="benefit-section-left-3">
						<div class="section-container">
							<div class="section-image clearfix">
								<div class="section-image-inner image-overlay">
									<img class="xl:max-w-[none] xl:w-auto max-w-full" decoding="async" src={benefitImg} alt="" />
									<div class="section-caption">
										<h3>99<span>%</span></h3>
										<p>Success Rates Guarantee</p>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!--  -->
			<div class="sm:w-[50%] make-column">
				<div
					class="px-[15px] pt-[120px] flex relative flex-wrap content-start benefit-section-content-right"
					style="transition: background .3s,border .3s,border-radius .3s,box-shadow .3s;"
				>
					<div class="">
						<p
							class="uppercase text-custom-orange text-[14px] font-medium m-0 leading-[1.1] tracking-[.2em] relative top-[-1px] after:content-['||'] after:relative after:mr-[6px] after:text-[10px] after:top-[-1px] before:content-['||'] before:relative before:ml-[6px] before:text-[10px] before:top-[-1px]"
						>
							our benefits
						</p>
						<h2
							class="text-custom-dark-primary m-0 font-bold lg:45px relative bottom-[-10px] mb-[50px] md:text-[40px] text-[35px] leading-[1.2em]"
						>
							Why you should choose our company
						</h2>
					</div>
					<div class="" style="/*margin: 0 0 45px;*/">
						<p class="m-0 text-text-color">
							Lorem ipsum dolor sit amet consectetur adipisicing elit. Nulla tenetur accusantium eligendi ad odio et rerum minima architecto
							facere consequatur nesciunt quaerat, ipsa autem vero modi quis dicta vitae. Similique?
						</p>
					</div>
					<div class="w-full">
						<div style="transition: background .3s,border .3s,border-radius .3s,box-shadow .3s,transform .4s;">
							<div class="row" style="margin-top: 20px;">
								<!-- 1 -->
								<div style="margin-top: 20px;" class="w-full flex-[0_0_auto]">
									<div class="relative flex items-start">
										<div class="benefit-section-icon">
											<i class="icon icon-bank"></i>
										</div>
										<div class="benefit-section-content">
											<h3 class="m-0 text-[20px] leading-[1.5em] text-custom-dark-primary font-bold mb-[11px]">Lower trade fees</h3>
											<p class="m-0 text-text-color">
												Lorem ipsum dolor consectetur notte massa sapien samet. Aucibus sed sem non, mattis commodo nisi.
											</p>
										</div>
									</div>
								</div>
								<!-- 2 -->
								<div style="margin-top: 20px;" class="w-full flex-[0_0_auto]">
									<div class="relative flex items-start">
										<div class="benefit-section-icon">
											<i class="icon icon-payment"></i>
										</div>
										<div class="benefit-section-content">
											<h3 class="m-0 text-[20px] leading-[1.5em] text-custom-dark-primary font-bold mb-[11px]">Up to 20.000$ limit</h3>
											<p class="m-0 text-text-color">
												Lorem ipsum dolor consectetur notte massa sapien samet. Aucibus sed sem non, mattis commodo nisi.
											</p>
										</div>
									</div>
								</div>
								<!-- 3 -->
								<div style="margin-top: 20px;" class="w-full flex-[0_0_auto]">
									<div class="relative flex items-start">
										<div class="benefit-section-icon">
											<i class="icon icon-smartphone-1"></i>
										</div>
										<div class="benefit-section-content">
											<h3 class="m-0 text-[20px] leading-[1.5em] text-custom-dark-primary font-bold mb-[11px]">Easy in 3 steps</h3>
											<p class="m-0 text-text-color">
												Lorem ipsum dolor consectetur notte massa sapien samet. Aucibus sed sem non, mattis commodo nisi.
											</p>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<section
		style={`background-position: top right; background-repeat: no-repeat; --cta-img: url('${ctaImg}');`}
		class="bg-custom-orange pt-[80px] cta-section"
	>
		<div class="container-fluid">
			<div class="row">
				<!--  -->
				<div class="lg:flex-[0_0_auto] lg:w-[50%]">
					<div class="cta-img-2">
						<img class="h-auto rounded-none border-none max-w-full" src={ctaImg2} alt="" />
					</div>
				</div>
				<!--  -->
				<div class="lg:flex-[0_0_auto] lg:w-[50%]">
					<div class="lg:pt-[73px] lg:pb-0 lg:pl-[30px] pt-[43px] pb-[80px]">
						<ul class="flex items-center m-0 p-0 mb-[7px]">
							<li class="uppercase text-[14px] font-semibold tracking-[.1em] text-white/60 after:content-['/'] after:mx-[15px]">Simple</li>
							<li class="uppercase text-[14px] font-semibold tracking-[.1em] text-white/60 after:content-['/'] after:mx-[15px]">
								Transparent
							</li>
							<li class="uppercase text-[14px] font-semibold tracking-[.1em] text-white/60">Secure</li>
						</ul>
						<h3 class="m-0 text-[40px] font-bold text-white mb-[30px]">Get quick business deals</h3>
						<a
							href="#"
							class="py-[23px] px-[60px] bg-white text-custom-dark-primary inline-block align-middle border-none text-[15px] text-center leading-[1.1] hover:bg-custom-dark-primary hover:text-white"
							style="transition: .5s; "
						>
							Get Started Now
						</a>
						<span class="relative left-[20px] top-[-15px] inline-block" style="animation: shapeMover 5s linear 0s infinite;">
							<svg
								class="fill-white w-[70px]"
								style="transform: rotate(120deg);"
								xmlns="http://www.w3.org/2000/svg"
								viewBox="0 0 130.49 76.07"
							>
								<path
									d="M153.74,101.43l1.56-.21c1-.12,2.49-.38,4.44-.53s4.28-.35,7-.49l4.29-.07c1.51,0,3.1.05,4.75.13,3.31.18,6.89.43,10.65,1a116,116,0,0,1,11.73,2.27,123,123,0,0,1,12.26,3.66,120.32,120.32,0,0,1,23.84,11.47,113.33,113.33,0,0,1,10.53,7.41c1.61,1.33,3.21,2.62,4.7,4s2.93,2.69,4.31,4,2.62,2.73,3.87,4,2.34,2.67,3.39,4,2.06,2.55,2.93,3.8,1.74,2.41,2.48,3.54l2,3.21c.61,1,1.12,2,1.6,2.8s.9,1.61,1.22,2.29l.84,1.73c.45.93.68,1.43.68,1.43a.95.95,0,0,1-1.62,1l0,0s-.33-.44-.93-1.27-1.43-2.06-2.59-3.57l-1.87-2.52c-.71-.89-1.47-1.86-2.28-2.9-1.63-2.06-3.55-4.32-5.68-6.75-1.07-1.21-2.24-2.41-3.4-3.71s-2.44-2.56-3.79-3.82c-2.61-2.62-5.53-5.2-8.62-7.8-.77-.65-1.58-1.26-2.38-1.91s-1.61-1.28-2.45-1.88l-2.52-1.88L232.07,122a126.44,126.44,0,0,0-11-6.71,117.91,117.91,0,0,0-11.65-5.54,106.37,106.37,0,0,0-11.85-4c-1-.29-2-.54-2.93-.77l-2.88-.69c-1.93-.37-3.8-.79-5.65-1-3.68-.63-7.2-.93-10.45-1.16-1.63-.09-3.19-.1-4.67-.15l-4.22.06-3.7.21c-1.14.07-2.18.22-3.12.31-1.87.17-3.37.44-4.38.6l-1.56.24a.94.94,0,0,1-1.08-.78,1,1,0,0,1,.79-1.09h0"
									transform="translate(-152.92 -100.13)"></path>
								<path
									d="M280.58,151.16c-.13,1-.19,1.94-.26,2.9s-.06,1.92-.07,2.89a50.5,50.5,0,0,0,.37,5.77c.12,1,.27,1.91.44,2.86s.38,1.89.6,2.83c.47,1.86,1,3.7,1.65,5.51a1.71,1.71,0,0,1-2.18,2.18l-.26-.09-2.46-.85c-.82-.28-1.64-.55-2.45-.85s-1.64-.57-2.44-.87l-2.44-.89c-1.61-.6-3.21-1.27-4.78-2a33,33,0,0,1-4.62-2.58,1.07,1.07,0,0,1-.25-1.44,1,1,0,0,1,.8-.48h0a21.85,21.85,0,0,1,2.7.26c.88.13,1.76.3,2.62.51a37.62,37.62,0,0,1,5.08,1.54q2.48.93,4.89,2c1.61.73,3.19,1.52,4.75,2.35l-2.44,2.09c-.18-1-.33-2-.47-3s-.23-2-.34-3-.17-2-.25-3-.13-2-.18-3-.07-2-.09-3l0-3c0-1-.06-2,0-3l0-3v0a1,1,0,0,1,1.08-.91,1,1,0,0,1,1,1s0,0,0,.08"
									transform="translate(-152.92 -100.13)"></path>
							</svg>
						</span>
					</div>
				</div>
			</div>
		</div>
	</section>
</Layout>

<style>
	.benefit-section-icon i.icon {
		display: block;
		font-size: 60px;
		height: 60px;
		width: 60px;
		color: theme(colors.custom-orange);
		position: relative;
		transition: all 0.5s ease;
	}
	/*  */
	/* background-color: transparent; background-image: none; background-position: bottom center; background-repeat: no-repeat; transition: background .3s,border .3s,border-radius .3s,box-shadow .3s; padding: 120px 15px 0; display: flex; position: relative; width: 100%; flex-wrap: wrap; align-content: flex-start; background-color:#e17b7b; background-image: url('${benefitBg1}'); background-position: bottom center; background-repeat: no-repeat; */
	.clearfix::after {
		display: block;
		clear: both;
		content: "";
	}
	.benefit-left-wrap {
		padding: 120px 15px 0;
		background-color: #e17b7b;
		background-position: bottom center;
		background-repeat: no-repeat;
	}

	.benefit-section-left-1 {
		background-image: var(--bg-img);
		background-color: rgb(225, 123, 123);
		background-position: 50% 100%;
		background-repeat: no-repeat;
		background-size: auto;
		clip-path: polygon(0 0, 100% 0, 58% 100%, 0% 100%);
		margin-left: -352px;
		width: 574px;
		/* right: 0; */
		position: absolute;
		height: 100%;
		left: 0;
		top: 0;
		bottom: 0;
	}

	.benefit-section-left-1:before {
		background-color: theme(colors.custom-orange);
		opacity: 0.9;
		position: absolute;
		height: 100%;
		width: 100%;
		content: "";
		display: block;
		top: 0;
		left: 0;
	}
	.benefit-section-left-2 {
		position: absolute;
		left: 254px;
		top: 0;
		width: 100%;
		height: 100%;
		transform: skewX(-15deg);
		transform-origin: left top;
		background-color: #f2ede9;
	}
	.benefit-section-left-3 {
		width: 100%;
		position: relative;
	}
	.benefit-section-left-3 .section-container {
		transition: background 0.3s, border 0.3s, border-radius 0.3s, box-shadow 0.3s, transform 0.4s;
	}
	/* .benefit-section-left-3 .section-container .section-image {
		display: block;
		position: relative;
	} */
	.benefit-section-left-3 .section-container .section-image .section-image-inner {
		/* display: inline-block; */
		position: relative;
		right: 70px;
		left: auto;
	}
	.benefit-section-left-3 .section-container .section-image .section-image-inner img {
		height: auto;
		position: relative;
		z-index: 11;
		max-width: 100%;
	}
	.benefit-section-left-3 .section-caption {
		position: absolute;
		text-align: left;
		z-index: 13;
		bottom: 0;
		left: 0;
		padding: 60px;
	}
	.benefit-section-left-3 .section-caption h3 {
		font-size: 45px;
		font-weight: 600;
		color: theme(colors.custom-orange);
	}
	.benefit-section-left-3 .section-caption p {
		margin: 0;
		font-size: 18px;
		line-height: 1.66667em;
		color: white;
	}
	.image-overlay:after {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		content: "";
		background-image: linear-gradient(0deg, theme(colors.custom-dark-primary) 0%, rgba(28, 28, 39, 0) 100%);
		z-index: 12;
	}

	/*  */
	.benefit-section-icon {
		padding-left: 20px;
		padding-top: 20px;
		position: relative;
		margin-right: 45px;
	}
	.benefit-section-icon:before {
		content: "";
		width: 61px;
		height: 61px;
		background-color: #f2ede9;
		position: absolute;
		top: 0;
		left: 0;
		border-radius: 50%;
		transform: scale(1);
		transform-origin: right center;
		transition: transform 0.5s ease;
	}
	.make-column {
		position: relative;
		display: flex;
		min-height: 1px;
	}
	@media (max-width: 575px) {
		.make-column {
			width: 100%;
		}
	}
	@media (max-width: 991px) {
		.benefit-left-wrap {
			padding: 80px 15px 0;
		}
		.benefit-mega-section {
			flex-wrap: wrap;
		}
		.benefit-section-content-right {
			padding: 60px 15px 0;
		}
	}
	@media (max-width: 1199px) {
		.benefit-section-left-1,
		.benefit-section-left-2 {
			display: none;
		}
		.benefit-section-left-3 .section-container .section-image {
			display: block;
			text-align: center;
		}
		.benefit-section-left-3 .section-container .section-image .section-image-inner {
			right: 0;
			left: auto;
		}
	}
	/*  */
	@media (min-width: 992px) {
		.cta-img-2 img {
			max-width: none !important;
			float: right;
			clip-path: polygon(0 0, 100% 0, 94% 100%, 0 100%);
		}
		.cta-section {
			padding-top: 0;
		}
	}
	.cta-img-2 img {
		max-width: 100%;
		float: right;
	}
	/* @media (min-width: 992px) { */
	.cta-section {
		background-image: var(--cta-img);
	}
	/* } */
	@keyframes shapeMover {
		0%,
		100% {
			transform: perspective(400px) translateY(0) rotate(0deg) translateZ(0px) translateX(0);
		}
		50% {
			transform: perspective(400px) rotate(-20deg) translateZ(10px) translateY(10px) translateX(10px);
		}
	}
	img,
	svg {
		vertical-align: middle;
	}
</style>
